@model List< About>


@{
    ViewData["Title"] = "about";
    Layout = "~/Views/Layout/Index.cshtml";
}

@functions {
    // Metin uzunluğunu kısaltan yardımcı yöntem
    public string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text))
            return text;

        return text.Length <= maxLength ? text : text.Substring(0, maxLength) + "...";
    }
}


get
<!-- About Section -->
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Hakkımda</th>
                                    <th scope="col">Detay</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var about in Model)
                                {
                                    <tr>
                                        <td>@about.Title</td>
                                        <td>@TruncateText(about.SubDescription, 50)</td>
                                        <td>@TruncateText(about.Details, 50)</td>
                                        <td><a href="/About/AboutDetail/@about.AboutId" class="btn btn-success">Yazıyı Aç</a></td>
                                        <td><a href="/About/DeleteAbout/@about.AboutId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/About/UpdateAboutDetail/@about.AboutId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
