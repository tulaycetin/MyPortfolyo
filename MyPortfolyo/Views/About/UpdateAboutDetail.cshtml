@model About
@{
	ViewData["Title"] = "UpdateAboutDetail";
	Layout = "~/Views/Layout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">
							Hakkımda Yazısını Güncelleme Sayfası
						</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input  type="hidden" asp-for="AboutId"/>
							<label>BAşlık</label>
							<input type="text" asp-for="Title" class="form-control " />
							<br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="SubDescription"></textarea>
							<br />
							<label>Detay</label>
							<textarea rows="4" class="form-control" asp-for="Details"></textarea>
							<br />
							<button class="btn btn-primary">Deneyimi Güncelle</button>


						</form>

					</div>
				</div>

			</div>

		</div>
	</div>
</div>

