@model Experince
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İş Deneyimlerim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">
							Deneyim Güncelleme Sayfası
						</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="ExperinceId"/>

							<label>Firma ismi</label>
							<input type="text" asp-for="Head" class="form-control " />
							<br />
							<label>Pozisyon</label>
							<input type="text" asp-for="Title" class="form-control " />
							<br />
							<label>Tarih</label>
							<input type="text" asp-for="Date" class="form-control " />
							<br />
							<label>Açıklma</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-primary">Deneyimi Güncelle</button>


						</form>

					</div>
				</div>

			</div>

		</div>
	</div>
</div>


