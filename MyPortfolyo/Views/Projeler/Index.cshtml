@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}




	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Projelerim</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Proje Listesi</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
						Proje bilgisini aşağıdaki panelden düzenleyebilirsiniz.
							</div>
							<table class="table mt-3">
								<thead>
										
										<tr>
										<th scope="col">#</th>
										<th scope="col">Başlık</th>
										<th scope="col">Acıklama</th>
							    		<th scope="col">Resim</th>
									<th scope="col">Detay</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
										</tr>
								</thead>
								<tbody>
										@foreach (var item in Model)
								{
									
									<tr>
												<td>@item.PortfolioId</td>
												<td>@item.Title</td>
												<td>@item.SubTitle</td>
										<td>@item.ImageUrl</td>
										<td>@item.Description</td>
											<td><a href="/Experience/DeleteExperience/@item.PortfolioId" class="btn btn-danger">Sil</a> </td>
											<td><a href="/Experience/UpdateExperience/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
											</tr>
										}
								
								</tbody>
							</table>
								<a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Proje Ekle</a>
						</div>
					</div>
						
				</div>

			</div>
		</div>
	</div>
 
