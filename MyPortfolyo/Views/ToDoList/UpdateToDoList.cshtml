
@model ToDoList

@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">
							Deneyim Güncelleme Sayfası
						</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="ToDoListId" />

							<label>Başlık & İşlem</label>
							<input type="text" asp-for="Title" class="form-control " />
							<br />
							<label>Tarih</label>
							<input type="date" asp-for="Date" class="form-control " />
							<br />
							<label>Fotograf</label>
							<input type="text" asp-for="ImageUrl" class="form-control " />
							<br />

							<button class="btn btn-primary">Yapılacak İşlemi Güncelle</button>
						</form>

					</div>
				</div>

			</div>

		</div>
	</div>
</div>


